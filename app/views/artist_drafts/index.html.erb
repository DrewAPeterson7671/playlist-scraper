<p id="notice"><%= notice %></p>

<h1>Artist Drafts</h1>

<table>
  <thead>
    <tr>
      <th>Draft name</th>
      <th>Draft genre</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_drafts.each do |artist_draft| %>
      <tr>
        <td><%= artist_draft.draft_name %></td>
        <td><%= artist_draft.draft_genre %></td>
        <td><%= artist_draft.artist_id %></td>
        <td><%= link_to 'Show', artist_draft %></td>
        <td><%= link_to 'Edit', edit_artist_draft_path(artist_draft) %></td>
        <td><%= link_to 'Destroy', artist_draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

