<p id="notice"><%= notice %></p>

<h1>Playlists</h1>

<table>
  <thead>
    <tr>
      <th>Playlist name</th>
      <th>Artist</th>
      <th>Track</th>
      <th>List year</th>
      <th>Chart position</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.playlist_name %></td>
        <td><%= playlist.artist_id %></td>
        <td><%= playlist.track_id %></td>
        <td><%= playlist.list_year %></td>
        <td><%= playlist.chart_position %></td>
        <td><%= playlist.source %></td>
        <td><%= link_to 'Show', playlist %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

